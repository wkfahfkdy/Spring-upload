<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.gukjin.surveytest.member.map.MemberMap">

	<insert id="memberInsert">
		insert into member(email, name, password, fileName, fileUuid) values (#{email}, #{name}, #{password}, #{fileName}, #{fileUuid})
	</insert>
	
	<select id="memberSelect">
	
	</select>
	
	<delete id="memberDelete">
		update member set state = 'D' where email = #{email}
	</delete>
	
	<update id="memberUpdate">
	
	</update>
	
	<select id="memberSelectList" resultType="co.gukjin.surveytest.member.vo.MemberVO">
		select * from member
		<if test='state != "A"'>
			where state = #{state}
		</if>
	</select>
	
	
</mapper>